class Solution {
    public long zeroFilledSubarray(int[] nums) {
        long count = 0;   // final result
        long streak = 0;  // consecutive zeros

        for (int num : nums) {
            if (num == 0) {
                streak++;        // extend zero streak
                count += streak; // add subarrays ending here
            } else {
                streak = 0;      // reset streak
            }
        }

        return count;
    }
}
